<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="1dp"
    app:cardCornerRadius="1dp"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivSender"
        android:layout_margin="8dp"
        android:src="@drawable/circular_hallow"
        android:layout_gravity="center_horizontal|top"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#80ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tvSenderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Mahendra"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textSize="@dimen/standard_body_font_size" />

            <TextView
                android:id="@+id/tvSentAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="9:30 am"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textSize="@dimen/standard_body_font_size" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvMessageBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:minLines="1"
            android:text="" />

        <!--<ImageView-->
        <!--android:id="@+id/ivGotoIcon"-->
        <!--android:layout_width="64dp"-->
        <!--android:layout_height="64dp"-->
        <!--android:padding="16dp"-->
        <!--android:rotation="180"-->
        <!--android:scaleType="center"-->
        <!--android:src="@drawable/ic_navigate_before_white_with_shadow_24dp"-->
        <!--android:tint="@color/black" />-->

    </LinearLayout>


</LinearLayout>

</android.support.v7.widget.CardView>